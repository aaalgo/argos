<argos>
    <global>
        <mom>0.9</mom>
        <eta>0.01</eta>
        <lambda>0.004</lambda>
        <init>0.1</init>
    </global>
    <node>
        <type>input-cifar</type>
        <name>input</name>
        <train>cifar.train</train>
        <test>cifar.test</test>
        <batch>128</batch>
    </node>
    <node>
        <type>conv</type>
        <name>conv1</name>
        <input>input</input>
        <pad>2</pad>
        <bin>5</bin>
        <step>1</step>
        <channel>32</channel>
        <neuron>relu</neuron>
        <pool>
            <bin>3</bin>
            <step>2</step>
            <type>max</type>
        </pool>
    </node>
    <node>
        <type>conv</type>
        <name>conv2</name>
        <input>conv1</input>
        <pad>2</pad>
        <bin>5</bin>
        <step>1</step>
        <channel>64</channel>
        <neuron>relu</neuron>
        <pool>
            <bin>3</bin>
            <step>2</step>
            <type>max</type>
        </pool>
    </node>
    <node>
        <type>global</type>
        <name>global1</name>
        <input>conv2</input>
        <channel>128</channel>
        <neuron>relu</neuron>
    </node>
    <node>
        <type>global</type>
        <name>global2</name>
        <input>global1</input>
        <channel>10</channel>
        <neuron>softmax</neuron>
    </node>
    <node>
        <type>logp</type>
        <name>loss</name>
        <input>global2</input>
        <label>input</label>
    </node>
    <!--
    <node>
        <type>eval</type>
        <input>loss</input>
        <period>200</period>
    </node>
    -->
</argos>

